<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('includes/head') %>
    <title><%= receita.titulo %> - Blog de Receitas</title>
</head>
<body>
    <%- include('includes/navigation') %>
    <h1><%= receita.titulo %></h1>
    <p><strong>Autor:</strong> <%= receita.autor %></p>
    <p><strong>Categoria:</strong> <%= receita.categoria %></p>
    <p><strong>Ingredientes:</strong></p>
    <ul>
        <% receita.ingredientes.forEach(i => { %>
            <li><%= i %></li>
        <% }) %>
    </ul>
    <p><strong>Instruções:</strong></p>
    <p><%= receita.instrucoes %></p>
    <h2>Comentários</h2>
    <ul>
        <% comentarios.forEach(c => { %>
            <li><strong><%= c.autor %>:</strong> <%= c.texto %></li>
        <% }) %>
    </ul>
    <h3>Adicionar Comentário</h3>
    <form method="post" action="/receitas/<%= receita._id %>/comentarios">
        <input type="text" name="autor" placeholder="Seu nome" required>
        <textarea name="texto" placeholder="Comentário" required></textarea>
        <button type="submit">Enviar</button>
    </form>
    <a href="/">Voltar</a>
    <%- include('includes/end') %>
</body>
</html>
