<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Produção - Caderno de Campo Digital</title>
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/producao.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
  <link href="https://fonts.googleapis.com/css?family=Kanit:400,600&display=swap" rel="stylesheet">
</head>
<body>
  <%- include('partials/header') %>

  <div class="variedades-container"></div>
  <button id="add-variedade-btn" title="Adicionar variedade">+</button>

  <div id="modal-variedade" class="modal">
    <div class="modal-content">
      <button class="close-modal" title="Fechar">&times;</button>
      <h2>Nova Variedade</h2>
  <form id="form-nova-variedade" class="edit-fields" style="display: flex; flex-direction: column; gap: 8px;">
        <label style="display: flex; flex-direction: column; gap: 6px;">Nome
          <input type="text" name="nome" maxlength="30" required>
        </label>
        <label style="display: flex; flex-direction: column; gap: 6px;">Descrição
          <textarea name="descricao" maxlength="150" class="descricao" style="min-height:60px;max-height:60px;resize:none;"></textarea>
        </label>
        <label style="display: flex; flex-direction: column; gap: 6px;">Categoria
          <select name="categoria" required>
            <!-- opções preenchidas via JS -->
          </select>
        </label>
        <label style="display: flex; flex-direction: column; gap: 6px;">Embalagens
          <div class="embalagens-list">
            <select name="embalagem" multiple size="3" style="width:100%;">
              <!-- opções preenchidas via JS -->
            </select>
          </div>
        </label>
        <button type="submit" class="save-btn">Salvar</button>
      </form>
    </div>
  </div>

  <%- include('partials/footer') %>
  <script src="/js/producao.js"></script>
  <script src="/js/nav-active.js"></script>
</body>
</html>
